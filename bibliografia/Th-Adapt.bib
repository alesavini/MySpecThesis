issn = {1748-717X},
journal = {Radiation oncology (London, England)},
pages = {52},
pmid = {20537161},
title = {{Planning target volume margins for prostate radiotherapy using daily electronic portal imaging and implanted fiducial markers.}},
volume = {5},
year = {2010}
