isbn = {00319155},
issn = {0031-9155},
journal = {Physics in medicine and biology},
number = {6},
pages = {1605--1628},
pmid = {9651029},
title = {{An adaptive control algorithm for optimization of intensity modulated radiotherapy considering uncertainties in beam profiles, patient set-up and internal organ motion.}},
volume = {43},
year = {1998}
}
